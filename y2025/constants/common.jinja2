{% set pi = 3.14159265358979323846 %}
{%set zeroing_sample_size = 200 %}
{# Pivot #}
{% set pivot_encoder_ratio = (10.0 / 110.0) %}
{%
set pivot_zero = {
    "average_filter_size": zeroing_sample_size,
    "one_revolution_distance": pi * 2.0 * pivot_encoder_ratio,
    "zeroing_threshold": 0.0005,
    "moving_buffer_size": 20,
    "allowable_encoder_error":0.9
}
%}

{# Elevator #}
{% set elevator_encoder_ratio = (1.0 / 1.0) %}
